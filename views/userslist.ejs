<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>BLOG</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <div class="header-nav">
        <a href="/">BLOG</a>
    
        <p>Welcome, <%= user.charAt(0).toUpperCase() + user.slice(1) %></p>
        
  
       
        <ul>
          <li><a href="/list">Articles</a></li>
          <li><a href="/logout">Log out</a></li>
        </ul>
      </div>
      <p>My Blog project</p>
    </header>

    <ul>
        <% if(messages.success_msg) { %>
        <li><%= messages.success_msg %></li>
        <% } %>
      </ul>
      <ul>
        <% if(messages.error) { %>
        <li><%= messages.error %></li>
        <% } %>
      </ul>
    <main>
      <ul class="list">
        <% articles.forEach(article => { %>
          <li>
            <!-- Display the members only badge when the article.category is limited -->
            <% if (article.category === 'limited') {%>
              <i>MEMBERS ONLY</i>
            <% } %>
            <h2><%= article.title %></h2>
            <p><%= article.summary %></p>
            <a href="/users/article/<%= article.id %>">Read more</a>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
