<html>
  <head>
    <meta charset="utf-8">
    <title>BLOG</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>    
    
    <div class="sign">
      <div class="container">
        <h1><a href="/list">BLOG</a></h1>
        <div class="panel">
          <h2>Log in</h2>
          <ul>
            <% if(messages.success_msg) { %>
            <li><%= messages.success_msg %></li>
            <% } %>
          </ul>
          <ul>
            <% if(messages.error) { %>
            <li><%= messages.error %></li>
            <% } %>
          </ul>
          <form action="/login" method="post">
            <p>Email</p>
            <input type="email" name ="email">
            <p>Password</p>
            <!--  input field for the password -->
            <input type="password" name="password">
            <input type="submit" value="Log in">
            <a href="/list">Back to articles</a>
            <a href="/signup" class="list-button">Register</a>
            <br><a href="/passwordreset" class="list-button">FORGOT PASSWORD?</a></br>
            <div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>